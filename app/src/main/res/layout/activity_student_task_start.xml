<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.boces.black_stanton_boces.StudentTaskStart">

    <!--TODO: Connect to Student Name, other: add picture of student? Fix hard coded text-->
    <TextView
        android:id="@+id/lblCurrentTaskStudentName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textAlignment="center"
        android:text="@string/lbl_current_student"
        android:textColor="@android:color/black"
        android:textSize="28sp"/>

    <Space
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_width="match_parent"/>
    <TextView
        android:id="@+id/lblCurrentTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textAlignment="center"
        android:text="@string/title_start_prompt"
        android:textColor="@android:color/black"
        android:textSize="36sp" />
    <Space
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_width="match_parent"/>
    <TextView
        android:id="@+id/lblCurrentTaskTaskName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textAlignment="center"
        android:text="@string/lbl_current_task"
        android:textColor="@android:color/black"
        android:textSize="28sp" />
    <Space
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_width="match_parent"/>
    <!--TODO: Connect to chosen task picture-->
    <ImageView
        android:id="@+id/imageCurrentTask"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        app:srcCompat="@mipmap/ic_launcher" />
    <Space
        android:layout_weight="60"
        android:layout_height="0dp"
        android:layout_width="match_parent"/>

    <Button
        android:background="@null"
        android:id="@+id/btnLoginDifferentStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_login"/>

    <Button
        android:id="@+id/btnCurrentTaskStart"
        android:text="@string/title_start_prompt"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_gravity="bottom"  />
</LinearLayout>
