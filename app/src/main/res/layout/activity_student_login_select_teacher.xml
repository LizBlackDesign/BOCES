<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.boces.black_stanton_boces.StudentLoginSelectTeacherActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">


    <TextView
        android:id="@+id/student_login_select_teacher_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_select_teacher"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <SearchView
        android:id="@+id/login_select_teacher_search"
        android:layout_width="348dp"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:visibility="visible"
        android:queryHint="@string/search_hint_type_teacher_name"
        tools:queryHint="@string/search_hint_type_teacher_name"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/student_login_select_teacher_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteX="11dp" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="367dp"
        android:layout_height="404dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/login_select_teacher_search"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>
