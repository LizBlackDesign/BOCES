<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.boces.black_stanton_boces.StudentLoginSelectStudentActivity">

    <TextView
        android:id="@+id/student_login_select_student_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_select_student"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <SearchView
        android:id="@+id/login_select_student_search"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:visibility="visible"
        android:queryHint="@string/search_hint_type_student_name"
        tools:queryHint="@string/search_hint_type_student_name"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/student_login_select_student_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteX="11dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerSelectStudent"
        android:layout_width="355dp"
        android:layout_height="374dp"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_select_student_search"
        tools:listitem="@layout/item_student" />

    <Button
        android:id="@+id/btnSelectStudentBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerSelectStudent" />

    <Button
        android:id="@+id/btnSelectStudentNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Next"
        app:layout_constraintHorizontal_bias="0.963"
        app:layout_constraintLeft_toRightOf="@id/btnSelectStudentBack"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerSelectStudent" />

</android.support.constraint.ConstraintLayout>
