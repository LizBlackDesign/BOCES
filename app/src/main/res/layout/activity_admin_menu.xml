<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1F4FA"
    tools:context="com.boces.black_stanton_boces.AdminMenuActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/lblAdminMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/title_admin_menu"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAdminStudents"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="28dp"
        android:text="Students"
        android:onClick="onClickAdminMenuStudents"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblAdminMenu" />

    <Button
        android:id="@+id/btnAdminTeachers"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:text="Teachers"
        android:onClick="onClickAdminMenuTeachers"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAdminStudents" />

    <Button
        android:id="@+id/btnAdminTasks"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:text="Tasks"
        android:onClick="onClickAdminMenuTasks"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAdminTeachers" />

    <Button
        android:id="@+id/btnAdminTimeClocked"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:text="Time Clocked"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAdminTasks" />

    <Button
        android:id="@+id/btnAdminReports"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:text="Reports"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAdminTimeClocked" />

    <Button
        android:id="@+id/btnBackAdminMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"

        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Back"
        android:onClick="onClickAdminMenuBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAdminReports" />

</android.support.constraint.ConstraintLayout>
