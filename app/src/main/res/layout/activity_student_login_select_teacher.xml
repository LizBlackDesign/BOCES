<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.boces.black_stanton_boces.StudentLoginSelectTeacherActivity">


    <TextView
        android:id="@+id/student_login_select_teacher_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_select_teacher"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/login_select_teacher_search"
        app:layout_constraintVertical_bias="0.47"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.502" />

    <Spinner
        android:id="@+id/login_select_teacher_spinner"
        android:layout_width="369dp"
        android:layout_height="457dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="31dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.512" />

    <SearchView
        android:id="@+id/login_select_teacher_search"
        android:layout_width="334dp"
        android:layout_height="46dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/login_select_teacher_spinner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:queryHint="@string/search_hint_type_teacher_name"
        tools:queryHint="@string/search_hint_type_teacher_name" />


</android.support.constraint.ConstraintLayout>
